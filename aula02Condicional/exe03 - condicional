programa {
  funcao inicio() {
    inteiro idade

    escreva("Digite a sua idade: \n")
    leia(idade)

    se (idade < 16)
      escreva("Você não pode votar. ")
      senao se (idade >= 16 e idade < 18)
      escreva("Você está apta(o) a votar e o voto é facultativo.")    
      senao se (idade >= 18 e idade < 65)
      escreva("Você está apta(o) a votar e o voto é obrigatório.")   
      senao se (idade >= 65)
      escreva("Você está apta(o) a votar e o voto é facultativo.")   
  }
}
